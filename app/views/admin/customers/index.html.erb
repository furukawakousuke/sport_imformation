<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>会員一覧(管理者)</h4>
      <table class="table mt-4">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>出身地</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= customer.name %></td>
            <td><%= customer.prefecture %></td>
            <td><%= link_to "詳細",admin_customer_path(customer),class:"btn btn-info btn-sm px-4" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>