<div class="container">
  <div class="row">
    <div class="col-12 mb-3">
      <h4 class="d-inline-block px-4 mt-3 mr-3 bg-light">会員詳細</h4><br>
    </div>
    <div class="col-4">
        <h5>Name</h5>
        <%= @customer.name %><br>
    </div>
      <div class="col-4">
        <h4>Prefecture</h4>
        <%= @customer.prefecture %><br>
      </div>
      <div>
        <h4>Email</h4>
        <%= @customer.email %>
      </div>
  </div>
  <div class="row">
    <div class="col-12 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th>日時</th>
            <th>タイトル</th>
            <th>詳細</th>
            <th>スポーツ</th>
            <th>都道府県</th>
          </tr>
        </thead>
          <% @customer.informations.each do |information| %>
        <tbody>
        <tr>
          <td><%= information.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= link_to admin_information_path(information),class:"btn btn-outline-white" do %>
            <%= information.title %>
            <% end %>
          </td>
          <td><%= information.introduction.truncate(20) %></td>
          <td><%= information.sport_genre.name %></td>
          <td><%= information.prefecture_genre.prefectures %></td>
        </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>