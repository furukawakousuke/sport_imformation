<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="mt-3 ml-3 px-4 bg-light d-inline-block lead">新規登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customer/shared/error_messages", resource: resource %>
      <table class="mx-auto mt-4">
        <tr>
          <td>
            <%= f.label :name,"名前" %><br>
            <%= f.text_field :name,:size=>'30',class:"ml-3 form-control form-control-sm"%>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :email,"Eメール" %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>'30',class:"ml-3 form-control form-control-sm" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :prefecture,"出身地" %>
            <%= f.select :prefecture,Customer.prefectures.keys,{},class:"form-control form-control-sm ml-3" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :password,"パスワード(６文字以上)" %><br>
            <%= f.password_field :password, autocomplete: "new-password",:size=>'30',class:"ml-3 form-control form-control-sm" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",:size=>'30',class:"ml-3 form-control form-control-sm" %>
          </td>
        </tr>
        <tr>
          <td class="text-center"><%= f.submit "Sign up",class:"btn btn-success btn-sm mt-3" %></td>
        </tr>
        <% end %>
      </table>
<%= render "customer/shared/links" %>
    </div>
  </div>
</div>