<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="mt-3 ml-3 px-4 bg-light lead d-inline-block">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="mx-auto mt-5">
              <tr>
                <td>
                  <%= f.label :email,"Eメール" %><br>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>'30',class:"ml-3 form-control form-control-sm" %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= f.label :password,"パスワード" %><br>
                  <%= f.password_field :password, autocomplete: "new-password",:size=>'30',class:"ml-3 form-control form-control-sm" %>
                </td>
              </tr>
              <tr>
                <td class="text-center"><%= f.submit "Log in",class:"btn btn-primary btn-sm mt-3 px-4" %></td>
              </tr>
              <% end %>
            </table>

<%= render "customer/shared/links" %>
    </div>
  </div>
</div>




