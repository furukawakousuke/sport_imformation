<div class="container">
  <div class="row">
    <div class="col-12">
      <p class="d-inline-block bg-light lead px-3 ml-4 mt-3">information</p>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-2 d-none d-lg-block">
      <table class="table table-borderless">
        <tr>
          <th class="border-bottom">スポーツ</th>
        </tr>
      <% @sport.each do |sport| %>
        <tr>
          <td>
            <%= link_to sport_genre_path(sport) do %>
            <%= sport.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </table>
    </div>
    <div class="col-lg-8 col-md-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>投稿日時</td>
            <td>タイトル</td>
            <td>スポーツ</td>
            <td></td>
          </tr>
        </thead>
      <% @informations.each do |information| %>
        <tbody>
          <tr>
            <td><%= information.created_at.strftime('%Y/%m/%d') %></td>
            <td class="small">
            <%= link_to information_path(information) do %>
            <%= information.title %>
            <% end %>
            </td>
            <td><%= information.sport_genre.name %></td>
            <td><%= information.prefecture_genre.prefectures %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-2 d-none d-lg-block pb-5">
      <table class="table table-bordered">
        <thead>
          <tr>
           <th>都道府県</th>
          </tr>
        </thead>
        <tbody>
        <% @prefecture.each do |prefecture| %>
          <tr>
          <td>
            <%= link_to prefecture_genre_path(prefecture) do %>
            <%= prefecture.prefectures %>
            <% end %>
          </td>
        <% end %>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>